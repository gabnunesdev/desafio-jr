generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  contact   String
  pets      Pet[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PetType {
  DOG
  CAT
}

model Pet {
  id         Int      @id @default(autoincrement())
  name       String
  type       PetType
  breed      String?
  birthDate  String? // Storing as String to keep format "DD/MM/YYYY" simple as per form input
  ownerName  String? // Specific owner name for this pet
  ownerPhone String? // Specific owner phone for this pet
  ownerId    Int
  owner      User     @relation(fields: [ownerId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([ownerId])
  @@index([name])
}
